<html>
  <head>
    <title>Home</title>
  </head>
  <body>
    <div class="profile">
      <img src="null">
      <a href="/user/edit-profile">Edit Profile</a> |
      <a href="/logout">Logout</a>
    </div>

    <div class="welcome">
      <h1>Hello <%= getFullName(
        UserGroupData[0].firstname,
        UserGroupData[0].lastname,
        UserGroupData[0].gender) %>!</h1>
      <h3>What are you up to today?</h3>
    </div>

    <div class="button">
      <a href="/home/create-group">Create Group</a>
      <a href="/home/join-group">Join Group</a>
    </div><br>

    <div class="list-joined-group">
      <table border='1'>
        <thead>
          <tr>
            <th>Id</th>
            <th>Group Name</th>
            <th>Group Description</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <%for(let index=0; index<UserGroupData[0].Groups.length; index++){%>
          <tr>
            <td><%=UserGroupData[0].Groups[index].id%></td>
            <td><%=UserGroupData[0].Groups[index].groupName%></td>
            <td><%=UserGroupData[0].Groups[index].groupDesc%></td>
            <td>
              <a href="/home/group/<%=UserGroupData[0].Groups[index].id%>">Open Group</a>||<a href="/home/group/leave/<%=UserGroupData[0].Groups[index].id%>">Leave Group</a>
            </td>
          </tr>
          <%}%>
        </tbody>
      </table>
    </div>
  </body>
</html>
